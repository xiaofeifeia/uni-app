.content {
  background-color: #fff;
}
.content swiper {
  width: 750rpx;
  height: 350rpx;
  background-color: red;
}
.content swiper image {
  width: 100%;
  height: 100%;
}
.content .nav {
  height: 180rpx;
  width: 750rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.content .nav .nav_box {
  width: 120rpx;
  height: 130rpx;
  text-align: center;
}
.content .nav .nav_box .nav_img {
  margin: 10rpx auto;
  width: 100rpx;
  height: 100rpx;
  background-color: #b1191a;
  border-radius: 50rpx;
  color: #fff;
  line-height: 100rpx;
}
.content .nav .nav_box text {
  font-size: 28rpx;
  color: #333333;
}
.content .hot_goods {
  width: 100%;
  margin-top: 5rpx;
}
.content .hot_goods .title {
  display: block;
  height: 80rpx;
  font-size: 30rpx;
  border-top: 1px solid #C0C0C0;
  border-bottom: 1px solid #C0C0C0;
  text-align: center;
  line-height: 80rpx;
  color: #f56566;
  letter-spacing: 30rpx;
}

